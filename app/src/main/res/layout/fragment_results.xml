<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ResultsFragment"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    android:background="@color/green"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="fitXY"
        android:contentDescription="@string/activity_result_image"
        android:src="@drawable/ic_trophy"/>

    <TextView
        android:id="@+id/tv_congrats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/results_congrats_text"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/yellow"
        android:layout_marginTop="@dimen/vertical_margin_10spd"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/cherry_cream_soda"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Username"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/yellow"
        android:layout_marginTop="@dimen/vertical_margin_10spd"
        android:textStyle="bold"
        android:fontFamily="@font/cherry_cream_soda"/>

    <TextView
        android:id="@+id/tv_quiz_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/result_score"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/yellow"
        android:layout_marginVertical="@dimen/vertical_margin_10spd"
        android:fontFamily="@font/cherry_cream_soda"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/rounded_corners"
        android:text="@string/play_again_btn"
        android:textSize="@dimen/result_btn_text_size"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/vertical_margin_10spd"
        android:fontFamily="@font/cherry_cream_soda"/>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/rounded_corners"
        android:text="@string/go_home_btn"
        android:textSize="@dimen/result_btn_text_size"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/vertical_margin_10spd"
        android:fontFamily="@font/cherry_cream_soda"/>

    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/rounded_corners"
        android:text="@string/test_history_result_btn"
        android:textSize="@dimen/result_btn_text_size"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/vertical_margin_10spd"
        android:fontFamily="@font/cherry_cream_soda"/>

</LinearLayout>