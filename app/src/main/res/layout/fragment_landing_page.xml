<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LandingPageFragment"
    android:padding="@dimen/standard_padding"
    android:gravity="center_horizontal"
    android:background="@color/green"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_landing_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="@dimen/landing_page_txt_size"
            tools:text="Hi\n $Name \n pick Multiplication \n or\n Division"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/cherry_cream_soda"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--Multiplication Button-->
            <FrameLayout
                android:id="@+id/fl_multiplication"
                android:layout_width="@dimen/landing_page_fl_size"
                android:layout_height="@dimen/landing_page_fl_size"
                android:layout_margin="@dimen/landing_page_fl_margin"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/landing_page_btn_size"
                    android:layout_height="@dimen/landing_page_btn_size"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_multiplication_logo"
                    android:contentDescription="@string/multiplication_fl_iv"/>
            </FrameLayout>

            <!--   Division Button -->
            <FrameLayout
                android:id="@+id/fl_division"
                android:layout_width="@dimen/landing_page_fl_size"
                android:layout_height="@dimen/landing_page_fl_size"
                android:layout_margin="@dimen/landing_page_fl_margin"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/yellow"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/landing_page_btn_size"
                    android:layout_height="@dimen/landing_page_btn_size"
                    android:layout_gravity="center"
                    android:contentDescription="@string/division_fl_iv"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_division_logo" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>